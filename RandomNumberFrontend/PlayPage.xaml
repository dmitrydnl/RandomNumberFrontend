<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomNumberFrontend.PlayPage"
             Title="PlayPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Try to guess number between 1 and 100"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry
                x:Name="MyNumberEntry"
                MaxLength="20"
                Style="{StaticResource CommonEntryStyle}"
                Placeholder="Your number?" />

            <Button
                x:Name="PlayBtn"
                Text="Play!"
                Clicked="OnPlayClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="PlayResult"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
